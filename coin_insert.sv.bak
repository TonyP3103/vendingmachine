module coin_insert (nickel, dime, quarter, total);
    input logic nickel, dime, quarter;
    output logic [2:0] coin_out;

    always_comb begin
        case ({nickel, dime, quarter})
            3'b001: coin_out = 3'b001; // quarter
            3'b010: coin_out = 3'b010; // dime
            3'b100: coin_out = 3'b101; // nickel
            default: coin_out = 3'b000; // no coin or invalid input
        endcase
    end


endmodule